# ============================================================================
# .env.example - Configuration Template
# Copy this to .env and fill in your values
# ============================================================================

# ============================================================================
# SHARED CONFIGURATION
# ============================================================================
NODE_ENV=development
LOG_LEVEL=info

# ============================================================================
# ASTRO (WEB) CONFIGURATION
# ============================================================================

# Public (safe for client - these can be exposed to browser)
BASE_URL=http://localhost:4321
API_ENDPOINT=http://localhost:4321/api
ENABLE_ANALYTICS=false
APP_VERSION=1.0.0

# Private (NEVER expose to client)
DATABASE_URL=mysql://root:@127.0.0.1:3306/devdb
SESSION_SECRET=generate-random-32-char-string-here-minimum-32-chars
BETTER_AUTH_URL=http://localhost:4321/api/auth

# Database connection pool
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Private API Keys (NEVER commit actual values - use .env.local)
RESEND_API_KEY=
STRIPE_SECRET_KEY=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# ELECTRON (DESKTOP) CONFIGURATION
# ============================================================================

# Public (can be sent to renderer process)
API_URL=http://localhost:4321
WINDOW_WIDTH=1200
WINDOW_HEIGHT=800
ENABLE_DEV_TOOLS=true

# Private (process only)
DB_FILE_NAME=app.db
AUTO_UPDATE_URL=
AUTO_UPDATE_ENABLED=false
ENABLE_CONTEXT_ISOLATION=true
ENABLE_NODE_INTEGRATION=false

# Security & Hardware
ENABLE_CAMERA=false
ENABLE_MICROPHONE=false

# Private Data (process only - NEVER commit)
DB_ENCRYPTION_KEY=
LICENSE_KEY=

# ============================================================================
# NOTES
# ============================================================================
# 
# File loading priority (last wins):
#   1. .env (commit to git with defaults)
#   2. .env.development or .env.production (environment-specific)
#   3. .env.development.local or .env.production.local (git-ignored)
#   4. .env.local (git-ignored, highest priority)
#
# For local development:
#   - Copy .env.example to .env.local
#   - Add your private data to .env.local
#   - .env.local is git-ignored and will never be committed
#
