# ============================================================================
# .env.example - Configuration Template
# Copy this to .env and fill in your values
# ============================================================================

# ============================================================================
# Environment Mode Selection
# ============================================================================
NODE_ENV=development

# ============================================================================
# SHARED CONFIGURATION
# ============================================================================
LOG_LEVEL=info

# ============================================================================
# SERVER CONFIGURATION (Astro Web App)
# ============================================================================

# Public (safe for client - these can be exposed to browser)
BASE_URL=http://localhost:4321
API_ENDPOINT=${BASE_URL}/api
BETTER_AUTH_URL=${API_ENDPOINT}/auth
ENABLE_ANALYTICS=false
APP_VERSION=1.0.0

# Private (NEVER expose to client)
DATABASE_URL=mysql://root:@127.0.0.1:3306/devdb
SESSION_SECRET=generate-random-32-char-string-here-minimum-32-chars

# Database connection pool
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Private API Keys (NEVER commit actual values - use .env.local)
RESEND_API_KEY=
STRIPE_SECRET_KEY=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# CLIENT CONFIGURATION (Electron Desktop App)
# ============================================================================

# Public (can be sent to renderer process)
API_URL=http://localhost:4321
ASTRO_BASE_URL=http://localhost:4321
WINDOW_WIDTH=1200
WINDOW_HEIGHT=800
ENABLE_DEV_TOOLS=true

# Private (main process only)
DB_FILE_NAME=app.db
AUTO_UPDATE_URL=
AUTO_UPDATE_ENABLED=false
ENABLE_CONTEXT_ISOLATION=true
ENABLE_NODE_INTEGRATION=false

# Security & Hardware
ENABLE_CAMERA=false
ENABLE_MICROPHONE=false

# Private Data (main process only - NEVER commit)
DB_ENCRYPTION_KEY=
LICENSE_KEY=

# ============================================================================
# NOTES
# ============================================================================
# 
# File loading priority (last wins):
#   1. .env                           (base defaults)
#   2. .env.development               (when NODE_ENV=development)
#   2. .env.production                (when NODE_ENV=production)
#   3. .env.development.local         (git-ignored, when NODE_ENV=development)
#   3. .env.production.local          (git-ignored, when NODE_ENV=production)
#   4. .env.local                     (git-ignored, highest priority)
#
# Mode Selection:
#   - NODE_ENV: development | production | test
#   - Controls which .env.* file gets loaded
#
# Variable Organization:
#   - SERVER_* and direct names: For Astro web server (@krag/config/server)
#   - CLIENT_* and direct names: For Electron desktop (@krag/config/client)
#   - SHARED: NODE_ENV, LOG_LEVEL (available to both)
#
# For local development:
#   - Copy .env.example to .env
#   - Add secrets to .env.local (gitignored)
#
