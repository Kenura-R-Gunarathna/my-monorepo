{
  "name": "krag",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel --filter \"./apps/*\" dev",
    "dev:ui": "pnpm --filter @krag/react-ui dev",
    "dev:astro": "pnpm --filter astro-web dev",
    "dev:electron": "pnpm --filter electron-desktop dev",
    "build": "pnpm --recursive build",
    "build:ui": "pnpm --filter @krag/react-ui build",
    "build:astro": "pnpm --filter astro-web build",
    "build:electron": "pnpm --filter electron-desktop build",
    "build:api": "pnpm --filter @krag/trpc-api build",
    "dev:astro:ui": "pnpm --parallel --filter astro-web --filter @krag/react-ui dev"
  },
  "keywords": [],
  "author": "Kenura R. Gunarathna",
  "license": "ISC",
  "packageManager": "pnpm@10.20.0",
  "devDependencies": {
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild",
      "sharp"
    ]
  }
}
